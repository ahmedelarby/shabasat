<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginBottom="5dp"
    android:elevation="10dp"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:background="#9109DA"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:id="@+id/c11">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="15sp"
    android:textStyle="bold"
    android:layout_marginTop="20dp"
    android:textAllCaps="false"
    android:textColor="#FFFEFE"
    android:text="كميه الاشتراك"
    app:layout_constraintTop_toBottomOf="@id/t"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginStart="10dp"
    android:id="@+id/kam"/>

        <TextView
            android:id="@+id/k"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="57dp"


            android:text="3"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/kam"
            app:layout_constraintStart_toEndOf="@+id/kam"
            app:layout_constraintTop_toBottomOf="@+id/t"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView

            android:id="@+id/t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="طلب اشتراك"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nnn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="اسم الموزع"
            android:textAllCaps="false"
            android:textColor="#F6F0F0"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/kam"
            app:layout_constraintStart_toStartOf="parent"
             />

        <TextView
            android:id="@+id/namemaws"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:text="ahmed"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/nnn"
            app:layout_constraintStart_toEndOf="@+id/nnn"
            app:layout_constraintTop_toBottomOf="@id/k" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="#FFFAFA"
            app:layout_constraintTop_toBottomOf="@id/nnn"
            android:text="اسم المشترك"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/nnns"/>

        <TextView
            android:id="@+id/namemash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="27dp"
            android:layout_marginTop="10dp"
            android:text="Ali"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/nnns"
            app:layout_constraintStart_toEndOf="@id/nnns"
            app:layout_constraintTop_toBottomOf="@id/namemaws" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تاريخ الطلب"
            app:layout_constraintTop_toBottomOf="@id/nnns"
            android:textSize="15sp"
            android:textColor="#FAF6F6"
            android:textStyle="bold"
            android:textAllCaps="false"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/tareh"/>

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="12dp"
            android:text="23/33/3333"
            android:textAllCaps="false"
            android:textColor="#050202"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tareh"
            app:layout_constraintStart_toEndOf="@id/tareh"
            app:layout_constraintTop_toBottomOf="@id/namemash" />

        <TextView
            android:id="@+id/namca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="رقم الكارت "
            android:textAllCaps="false"
            android:textColor="#FFFCFC"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tareh" />

        <TextView
            android:id="@+id/num11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:text="8747864767889678"
            android:textAllCaps="false"
            android:textColor="#070404"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/namca"
            app:layout_constraintStart_toEndOf="@id/namca"
            app:layout_constraintTop_toBottomOf="@id/type" />

        <LinearLayout

            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:padding="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.487"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/namca"
            tools:ignore="MissingConstraints">

            <Button
                android:id="@+id/okaytalb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:background="@drawable/stilebtn"
                android:text="موافق"
                android:textAllCaps="false"
                android:textColor="#FFFDFD"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/rafdtalb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/stilebtn"
                android:text="رفض"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/showm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@drawable/stilebtn"
                android:text="تفاصيل"
                android:textColor="#FDFCFC"
                android:textSize="20sp" />


        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>