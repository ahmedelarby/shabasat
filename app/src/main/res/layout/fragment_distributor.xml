<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#45E4E1E1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".distributor">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="الخدمات المتاحه"
    app:layout_constraintTop_toBottomOf="@id/l1"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:textStyle="bold"
    android:textSize="20sp"
    android:textColor="#070404"/>
    <ProgressBar
        android:id="@+id/prodi"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="@+id/l1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/l1"
        app:layout_constraintTop_toTopOf="@id/l1" />
   <LinearLayout
       android:paddingStart="20dp"
       android:layout_marginTop="5dp"
       android:layout_marginStart="5dp"
       android:layout_marginEnd="5dp"
       android:background="@drawable/backprofile"
       android:padding="10dp"

       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:id="@+id/l1"
       android:orientation="vertical">
       <TextView
           android:layout_marginTop="10dp"
           android:id="@+id/namedi"
           android:layout_marginStart="10dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="الاسم"
           android:textSize="20dp"
           android:textColor="#FFFDFD"
           android:textStyle="bold"
           android:textAllCaps="false"/>
       <TextView
           android:layout_marginStart="10dp"
           android:layout_marginTop="10dp"
           android:id="@+id/citydi"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="المدينه"
           android:textSize="20dp"
           android:textColor="#FFFBFB"
           android:textStyle="bold"
           android:textAllCaps="false"/>
       <TextView
           android:layout_marginStart="10dp"
           android:layout_marginTop="10dp"
           android:id="@+id/emaildi"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="الاميل"
           android:textSize="20dp"
           android:textColor="#FAFAFA"
           android:textStyle="bold"
           android:textAllCaps="false"/>
        <TextView
            android:layout_marginStart="10dp"
            android:id="@+id/resdi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="#FFFCFC"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:text="الرصيد المدفوع"/>
       <TextView
           android:layout_marginStart="10dp"
           android:id="@+id/resdi2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textAllCaps="false"
           android:textStyle="bold"
           android:textColor="#F7F3F3"
           android:textSize="20sp"
           android:layout_marginTop="10dp"
           android:text="الرصيد المستحق"/>







   </LinearLayout>

<LinearLayout
    app:layout_constraintTop_toBottomOf="@id/l1"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/l2"
    android:padding="10dp"
    android:layout_marginTop="50dp"
    android:orientation="horizontal"
    tools:ignore="Orientation">

    <Button
        android:layout_marginEnd="30dp"
        android:id="@+id/add_sbscirabe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/stilebtn"
        android:padding="20dp"
        android:text="اضافه مشترك "
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="#FFFFFD"
        android:textSize="20dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/updeit_sbscirabe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/stilebtn"
        android:padding="20dp"
        android:textColor="#FFFCFC"
        android:textStyle="bold"
        android:text="تجديد الاشتراك"
        android:textAllCaps="false"
        android:textSize="20dp"

        tools:ignore="MissingConstraints" />


</LinearLayout>




<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/l3"
    android:padding="5dp"
    android:layout_marginTop="20dp"
    app:layout_constraintTop_toBottomOf="@id/l2"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:orientation="horizontal">


    <Button
        android:id="@+id/report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/stilebtn"
        android:padding="15dp"
        android:layout_marginEnd="30dp"
        android:text="ابلاغ للمسئولين "
        android:textStyle="bold"
        android:textColor="#F8F8F8"
        android:textAllCaps="false"
        android:textSize="20sp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/talab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/stilebtn"
        android:padding="15dp"
        android:layout_marginEnd="10dp"
        android:textColor="#FDFAFA"
        android:textStyle="bold"
        android:text="طلبات التسويه"
        android:textSize="20sp" />


</LinearLayout>

    <Button
        android:id="@+id/Singout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/stilebtn"
        android:padding="20dp"
        android:text="تسجيل الخروج"
        android:textAllCaps="false"
        android:textColor="#FDFCFC"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/l3"
        app:layout_constraintVertical_bias="0.994"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>