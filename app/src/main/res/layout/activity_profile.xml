<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/problem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="مرحبا"
        android:textSize="30sp"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />
    <TextView
        android:background="#A4FCFC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/problem"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:id="@+id/namesr"
        android:textColor="#050502"/>
    <TextView
        android:background="#A4FCFC"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="numbercard"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/namesr"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:id="@+id/numbersr"
        android:textColor="#050502"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:background="#A4FCFC"

        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/numbersr"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:id="@+id/emailsr"
        android:textColor="#050502"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="case"
        android:textSize="20sp"
        android:background="#A4FCFC"

        app:layout_constraintTop_toBottomOf="@id/emailsr"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:id="@+id/casesr"
        android:textColor="#050502"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type End "
        android:background="#A4FCFC"

        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/casesr"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:id="@+id/typeendsr"
        android:textColor="#050502"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="duration "
        android:textSize="20sp"
        android:background="#A4FCFC"

        app:layout_constraintTop_toBottomOf="@id/typeendsr"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:id="@+id/durationsr"
        android:textColor="#050502"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="تجديد الاشتراك"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="30sp"
        android:padding="5dp"
        android:background="@drawable/stile"
        android:id="@+id/Subscription_renewal"
        app:layout_constraintTop_toBottomOf="@id/durationsr"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"/>
    
</androidx.constraintlayout.widget.ConstraintLayout>