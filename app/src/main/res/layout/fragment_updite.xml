<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#B7DBEB"
    tools:context=".updite">

    <!-- TODO: Update blank fragment layout -->
    <EditText
        android:inputType="number"
        android:id="@+id/dui"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:hint="ادخل عدد الشهور" />
    <Button
        android:padding="10dp"
        android:background="@drawable/stile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ادخل تاريخ الانتهاء"
        android:textAllCaps="false"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/dui"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/te"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/stilebtn"
        android:text="موافق"
        android:textAllCaps="false"
        android:textColor="#FDFDFC"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/te"
        app:layout_constraintVertical_bias="0.018" />


</androidx.constraintlayout.widget.ConstraintLayout>